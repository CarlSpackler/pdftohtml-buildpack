#!/usr/bin/env bash
echo "-----&gt; Installing pdftohtml-41a"
# change to the the BUILD_DIR ($1)
cd $1
# download the binary (-O) silently (-s)
curl https://bitbucket.org/smutniak/pdftohtml-buildpack/raw/8c47944971c9ae4d89e04bd75f42c9a209f08dbf/pdftohtml.tar.gz -s -O -ssl3
# make a directory to untar (like unzip) the binary
mkdir -p vendor/pdftohtml
# untar the binary to the directory we want
tar -C vendor/pdftohtml -xvf pdftohtml.tar.gz


